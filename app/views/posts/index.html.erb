<link href="https://fonts.googleapis.com/css?family=Parisienne|Roboto" rel="stylesheet">
<h1>Votre "Wishlist"</h1>
<br/>
<br/>
<table>
  <thead>
    <tr>
      <th>Nom du produit voulu</th>
      <th>Prix maximal à y accorder</th>
      <th>Date limite à l'achat</th>
      <th> Photo de l'article ou de l'inspiration </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td><%= post.name %></td>

        <td><%= post.price %></td>

        <td><%= post.deadline %></td>

        <td><%= image_tag post.picture(:med) %> </td>

        <td class="liens"><%= link_to 'Agrandir', post %> </br></br>

       <%= link_to 'Editer', edit_post_path(post) %></br></br>

       <%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Êtes-vous sûr de votre choix ?' } %> </br></br></td>

      </tr>
    <% end %>
  </tbody>
</table>

